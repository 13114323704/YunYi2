<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@drawable/divider_line_bottom"
    android:layout_marginBottom="10dp"
    android:clipChildren="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="5dp"
        android:clipChildren="false"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/private_experience_image"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@mipmap/image_dialog1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/private_experience_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:ellipsize="end"
                android:gravity="left|bottom"
                android:maxLines="1"
                android:text="如果我知道"
                android:textColor="#696969"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/private_experience_time"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="left|bottom"
                android:maxLines="1"
                android:text="5月11日"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/private_experience_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:ellipsize="end"
                android:maxLines="3"
                android:gravity="left|bottom"
                android:text="        如果我知道我的未来，我会从现在起开始努力，让我的未来更加色彩斑斓，我未来的生活一定是多姿多彩的，我会为了我的未来而努力拼搏，俗话说的好，爱拼才会赢，我会一直拼下去的，为自己加油。"
                android:textColor="#808080"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>


</FrameLayout>