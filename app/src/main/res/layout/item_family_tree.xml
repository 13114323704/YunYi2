<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/dot_top"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/dot_darker"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/person_image_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dot_top"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:id="@+id/dot_left"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/dot_darker"
            android:visibility="gone" />

        <com.hq.yunyi2.utils.CircleImageView
            android:id="@+id/person_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@mipmap/ic_launcher"
            app:border_color="#49b3cb"
            app:border_width="2dp" />

        <View
            android:id="@+id/dot_right"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/dot_darker"
            android:visibility="gone" />

    </LinearLayout>


    <TextView
        android:id="@+id/person_content"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/person_image_layout"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="太爷爷-张三"
        android:textSize="8sp" />

    <View
        android:id="@+id/dot_bottom"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:layout_below="@+id/person_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/dot_darker"
        android:visibility="gone" />
</RelativeLayout>