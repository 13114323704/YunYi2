<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/divider_line_bottom"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_info_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="5dp"
            android:text="这是生平经历这是生平经历这是生平经历这是生平经历这是生平经历"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/textview_info_relation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:gravity="right"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingRight="5dp"
            android:text="大伯" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_layout"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_info_motto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="5dp"
            android:text="这是一句感悟这是一句感悟这是一句感悟这是一句感悟这是一句感悟这是一句感悟"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textview_info_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:text="小明"
            android:ellipsize="end"
            android:paddingRight="5dp"
            android:gravity="right"
            android:textSize="15sp" />
    </LinearLayout>

</RelativeLayout>