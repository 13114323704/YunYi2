<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@android:color/transparent"
    android:clipChildren="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_gravity="bottom"
        android:background="#FFFFFF"
        android:clipChildren="false"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/private_experience_image"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/passage_image1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/private_experience_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:ellipsize="end"
                android:gravity="left|bottom"
                android:maxLines="1"
                android:text="如果我知道"
                android:textColor="#696969"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/private_experience_time"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="left|bottom"
                android:maxLines="1"
                android:text="5月11日"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/private_experience_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:ellipsize="end"
                android:maxLines="3"
                android:gravity="left|bottom"
                android:text="这是一段文字这是一段文字这是一段文字这是一段文字这是一段文字这是一段文字"
                android:textColor="#808080"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>


</FrameLayout>